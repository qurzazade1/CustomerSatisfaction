<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>com.customer.filters.LoginFilter</filter-class>
    </filter>
    <filter>
        <filter-name>LoginCompanyFilter</filter-name>
        <filter-class>com.customer.filters.LoginCompanyFilter</filter-class>
    </filter>
    <filter>
        <filter-name>AdminFilter</filter-name>
        <filter-class>com.customer.filters.AdminFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <url-pattern>/jsp/admin.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>LoginCompanyFilter</filter-name>
        <url-pattern>/jsp/company.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/jsp/user.jsp</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>com.customer.servlets.register</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.customer.servlets.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logoutServlet</servlet-name>
        <servlet-class>com.customer.servlets.logoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>register_company</servlet-name>
        <servlet-class>com.customer.servlets.register_company</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login_company</servlet-name>
        <servlet-class>com.customer.servlets.login_company</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>complain_insert</servlet-name>
        <servlet-class>com.customer.servlets.complain_insert</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>request_insert</servlet-name>
        <servlet-class>com.customer.servlets.request_insert</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logoutServlet</servlet-name>
        <url-pattern>/logoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>register_company</servlet-name>
        <url-pattern>/register_company</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login_company</servlet-name>
        <url-pattern>/login_company</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>complain_insert</servlet-name>
        <url-pattern>/complain_insert</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>request_insert</servlet-name>
        <url-pattern>/request_insert</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
